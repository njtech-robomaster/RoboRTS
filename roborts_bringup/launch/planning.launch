<?xml version="1.0"?>
<launch>
	<arg name="planner_map" default="icra2021-full" />

	<group>
		<remap from="map" to="planner_map" />
		<remap from="map_metadata" to="planner_map_metadata" />
		<remap from="static_map" to="planner_static_map" />

		<node name="planning_map_server" pkg="map_server" type="map_server" args="$(find roborts_bringup)/maps/$(arg planner_map).yaml" respawn="false" />

		<node pkg="roborts_planning" type="global_planner_node" name="global_planner_node" respawn="false" />
		<node pkg="roborts_planning" type="local_planner_node" name="local_planner_node" respawn="false" />
	</group>
	<node pkg="roborts_planning" type="local_planner_test" name="local_planner_test" />
	<node pkg="roborts_planning" type="global_planner_test" name="global_planner_test" />
</launch>
